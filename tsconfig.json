{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES6"
    ],
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./build",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "build",
  ],
  "include": [
    "src"
  ]
}
